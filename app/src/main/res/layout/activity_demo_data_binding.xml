<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.crazyandcoder.top.jetpackdemojava.utils.BookUtils" />

        <variable
            name="book"
            type="com.crazyandcoder.top.jetpackdemojava.bean.Book" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".jetpack.databinding.DemoDataBindingActivity">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="@{book.title}"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="@{book.author}"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="@{BookUtils.getRating(book.rating)}"
            android:textColor="@color/white" />


    </LinearLayout>
</layout>